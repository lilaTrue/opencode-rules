{
    "$schema": "https://opencode.ai/config.json",
    "instructions": [
        "opencode/.rules/AGENTS.md"
    ],
    "agent": {
        "general": {
            "disable": true
        },
        "plan": {
            "disable": true
        },
        "build": {
            "disable": true
        },

        "chat": {
            "mode": "primary",
            "description": "Chat assistant",
            "prompt": "{file:./opencode/.prompts/chat.txt}",
            "tools": {
                "write" : false,
                "edit" : false,
                "bash" : false,
                "glob" : true,
                "grep" : true,
                "list" : false,
                "patch" : false,
                "todowrite" : false,
                "todoread": false
            },
            "temperature": 0.0
        },
        "coding": {
            "mode": "primary",
            "description": "Code assistant",
            "prompt": "{file:./opencode/.prompts/coding.txt}",
            "tools": {
                "write" : true,
                "edit" : true,
                "bash" : true,
                "glob" : true,
                "grep" : true,
                "list" : true,
                "patch" : true,
                "todowrite" : true,
                "todoread": true
            },
            "temperature": 0.0
        }

    }
}